<!-- views/restaurants/edit.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="edit-body">
        <h1>Edit Restaurant
        </h1>
        <form action="/users/<%= user._id %>/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" value="<%= restaurant.name %>">
            <label for="location">Location:</label>
            <input type="text" name="location" id="location" value="<%= restaurant.location %>">
            <label for="rating">Star rating:</label>
            <input type="number" name="rating" id="rating" value="<%= restaurant.rating %>">
            <label for="comments">Comments:</label>
            <textarea name="comments" id="comments"><%= restaurant.comments %></textarea>
            <button type="submit">Update Restaurant</button>
        </form>
    </div>
</body>

</html>